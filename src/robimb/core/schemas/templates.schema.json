{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "version",
    "templates"
  ],
  "properties": {
    "version": {
      "type": "string"
    },
    "templates": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "category",
          "template"
        ],
        "properties": {
          "category": {
            "type": "string"
          },
          "template": {
            "type": "string"
          },
          "fallbacks": {
            "type": "object",
            "additionalProperties": {}
          }
        }
      }
    }
  }
}