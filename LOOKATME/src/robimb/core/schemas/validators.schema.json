{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "version",
    "rules"
  ],
  "properties": {
    "version": {
      "type": "string"
    },
    "rules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "if",
          "assert",
          "message"
        ],
        "properties": {
          "if": {
            "type": "string"
          },
          "assert": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        }
      }
    }
  }
}