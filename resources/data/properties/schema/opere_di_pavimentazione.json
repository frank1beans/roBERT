{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Schema proprietà — Opere di pavimentazione",
  "type": "object",
  "required": [
    "category",
    "properties"
  ],
  "properties": {
    "category": {
      "const": "opere_di_pavimentazione"
    },
    "properties": {
      "type": "object",
      "required": [
        "materiale",
        "formato",
        "spessore_mm"
      ],
      "properties": {
        "marchio": {
          "allOf": [
            {
              "$ref": "#/$defs/value"
            },
            {
              "properties": {
                "value": {
                  "type": "string",
                  "minLength": 2,
                  "maxLength": 80
                }
              }
            }
          ]
        },
        "materiale": {
          "allOf": [
            {
              "$ref": "#/$defs/value"
            },
            {
              "properties": {
                "value": {
                  "type": "string",
                  "enum": [
                    "gres",
                    "legno",
                    "laminato",
                    "resina",
                    "pietra_naturale",
                    "calcestruzzo",
                    "vinilico"
                  ]
                }
              }
            }
          ]
        },
        "formato": {
          "allOf": [
            {
              "$ref": "#/$defs/value"
            },
            {
              "properties": {
                "value": {
                  "type": "string",
                  "pattern": "^\\d{1,4}(?:[x×]\\d{1,4}(?:[x×]\\d{1,4})?)? ?(mm|cm|m)?$",
                  "minLength": 2,
                  "maxLength": 40
                }
              }
            }
          ]
        },
        "spessore_mm": {
          "allOf": [
            {
              "$ref": "#/$defs/measurement"
            },
            {
              "properties": {
                "value": {
                  "type": "number",
                  "minimum": 4,
                  "maximum": 50
                },
                "unit": {
                  "const": "mm"
                }
              }
            }
          ]
        },
        "classe_resistenza_usura": {
          "allOf": [
            {
              "$ref": "#/$defs/value"
            },
            {
              "properties": {
                "value": {
                  "type": "string",
                  "enum": [
                    "PEI I",
                    "PEI II",
                    "PEI III",
                    "PEI IV",
                    "PEI V"
                  ]
                }
              }
            }
          ]
        },
        "classe_scivolosita": {
          "allOf": [
            {
              "$ref": "#/$defs/value"
            },
            {
              "properties": {
                "value": {
                  "type": "string",
                  "enum": [
                    "R9",
                    "R10",
                    "R11",
                    "R12",
                    "R13"
                  ]
                }
              }
            }
          ]
        },
        "normativa_riferimento": {
          "allOf": [
            {
              "$ref": "#/$defs/value"
            },
            {
              "properties": {
                "value": {
                  "type": "string",
                  "minLength": 3,
                  "maxLength": 120
                }
              }
            }
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "$defs": {
    "base": {
      "type": "object",
      "required": [
        "value",
        "source",
        "span",
        "confidence"
      ],
      "properties": {
        "value": {},
        "unit": {
          "type": [
            "string",
            "null"
          ]
        },
        "raw": {
          "type": [
            "string",
            "null"
          ]
        },
        "source": {
          "type": "string",
          "enum": [
            "parser",
            "matcher",
            "qa_llm",
            "fuse"
          ]
        },
        "span": {
          "type": "array",
          "items": {
            "type": "integer"
          },
          "minItems": 2,
          "maxItems": 2
        },
        "confidence": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        },
        "evidence": {
          "type": [
            "string",
            "null"
          ]
        },
        "validation": {
          "type": "object"
        }
      },
      "additionalProperties": false
    },
    "measurement": {
      "allOf": [
        {
          "$ref": "#/$defs/base"
        },
        {
          "properties": {
            "value": {
              "type": "number"
            }
          }
        }
      ]
    },
    "value": {
      "allOf": [
        {
          "$ref": "#/$defs/base"
        },
        {
          "properties": {
            "value": {
              "type": [
                "string",
                "number",
                "boolean"
              ]
            }
          }
        }
      ]
    }
  }
}
